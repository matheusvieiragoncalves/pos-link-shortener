{
  "name": "server",
  "version": "1.0.0",
  "description": "## RF (Requisitos funcionais)",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --env-file .env src/infra/http/server.ts",
    "test": "dotenv -e .env.test vitest run --project unit",
    "test:e2e": "dotenv -e .env.test vitest run --project e2e",
    "test:watch": "dotenv -e .env.test vitest --project unit",
    "test:e2e:watch": "dotenv -e .env.test vitest --project e2e",
    "pretest:e2e": "tsx --env-file .env.test test/utils/reset-database.ts && npm run db:migrate:test",
    "pretest:e2e:watch": "tsx --env-file .env.test test/utils/reset-database.ts && npm run db:migrate:test",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:migrate:test": "dotenv -e .env.test drizzle-kit migrate",
    "build": "tsup-node",
    "build:run": "node --env-file .env dist/infra/http/server.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "3.826.0",
    "@aws-sdk/lib-storage": "3.826.0",
    "@fastify/cors": "11.0.1",
    "csv-stringify": "6.5.2",
    "dayjs": "1.11.13",
    "drizzle-orm": "0.44.2",
    "fastify": "5.3.3",
    "fastify-type-provider-zod": "4.0.2",
    "postgres": "3.4.7",
    "zod": "3.25.50"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@faker-js/faker": "9.8.0",
    "@types/node": "22.15.29",
    "@types/supertest": "6.0.3",
    "dotenv-cli": "8.0.0",
    "drizzle-kit": "0.31.1",
    "supertest": "7.1.1",
    "tsup": "8.5.0",
    "tsx": "4.19.4",
    "typescript": "5.8.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.1"
  }
}
